<% if @article and @article.id %>
  <h4><%= _("Merge Articles") %></h4>
  <%= form_tag('/admin/content/merge', :action => 'merge', :id => @article.id) do %>
    <%= hidden_field_tag 'original', @article.id %>
    <%= label_tag "Article ID " %>
    <%= text_field_tag 'merge_with' %>
    <%= submit_tag "Merge With This Article", :class => 'btn info' %>
  <% end %>
<% end %>
